
<style>
body{
background-image: url(/assets/quorabg.png);

}

</style>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h1 style="margin-top:70px;color:#0d47a1;font-family: 'Tangerine';font-size:45px;margin-left:400px; ">IndexOutOfBounds</h1>
  <div class="container">

    <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-5">
      <div class="well" style=" background-color: black; padding: 30px;
      padding-top:10px;margin-top:100px;margin-left:30px;opacity: 0.8">
        <h1 style="color: white;"><b>Log In</b></h1><br>
        <div class="input-group input-group-md">
        <span class="input-group-addon "><span class="glyphicon glyphicon-user"></span></span>
             <%= f.email_field :email, autofocus: true, class:'form-control', style:'color: black',placeholder:"Email" %>
        
        </div>
        <br>
        <div class="input-group input-group-md">
          <span class="input-group-addon "><span class="glyphicon glyphicon-lock"></span> </span> 
          <%= f.password_field :password, autocomplete: "off",class:'form-control', style:'color: black',placeholder:"Password" %>
         </div>
          <br>
      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me,style:'color:white' %>
      </div>
      <% end -%>
      <%= render "devise/shared/links" %>
      <br><br>
      <%= f.submit "Log In" ,class:'btn btn-primary'%>
      
    </div>


    </div>
        <div class="col-sm-4">
        <h1 style="color:black;padding-top: 200px"><q style="size: 100px;color:#0d47a1;">Any Doubt Then Just Ask Here</q></h1>
      </div>
  </div>
<% end %>
